{{> logged }}
<div class="container" style="margin-top: 76px">
  <div class="row">
    <div class="col-4">
      {{> lateral }}
    </div>
    <div class="col-8">
      <h4 class="mb-4">Lista de amigos</h4>
      <div class="card mb-4">
        <div class="card-body text-center">
          <span>Total de elementos: {{count}}</span>&nbsp;
          <a id="left" href="/panel?page={{back page}}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
          Pagina: {{page}}
          <a id="right" href="/panel?page={{next page pages}}" class="btn btn-secondary"><i class="fa fa-arrow-right"></i></a>
          Total de paginas: {{pages}}
          &nbsp;<a title="Reiniciar filtro" class="btn btn-danger" href="/panel"><i class="fa fa-trash"></i></a>
        </div>
      </div>
      {{#if errorAlert}}
        {{> modal_alert}}
      {{/if}}
      {{#if friends}}
        {{#each friends}}
          <div class="card mb-4">
            <div class="card-header">
              <span class="text-muted">Creado por: <a href="/panel/user/{{user._id}}">{{user.fullname}}</a></span>
            </div>
            <div class="card-body">
              <p>{{friend.fullname}}</p>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>