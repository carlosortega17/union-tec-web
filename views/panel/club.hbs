{{> logged }}
<div class="container" style="margin-top: 76px">
  <div class="row">
    <div class="col-4">
      {{> lateral }}
    </div>
    <div class="col-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5>Crea un club de {{type}}</h5>
        </div>
        <div class="card-body">
          <form action="/panel/club" method="post">
            <div class="form-group">
              <input type="text" name="name" id="name" placeholder="Nombre" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="checkin">Hora de entrada</label>
              <input type="time" name="checkin" id="checkin" placeholder="Hora de entrada" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="checkin">Hora de salida</label>
              <input type="time" name="departure" id="departure" placeholder="Hora de salida" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="text" name="days" id="days" placeholder="Dias de la semana (separe con ,)" class="form-control" required>
            </div>
            <input type="hidden" name="type" id="type" value="{{type}}" required>
            <div class="form-group">
              <textarea
                class="form-control"
                placeholder="Describe el club"
                name="description" id="description" cols="30" rows="3" required></textarea>
            </div>
            <div class="form-group text-right">
              <button type="submit" class="btn btn-secondary" style="padding-left: 2.5rem; padding-right: 2.5rem;">Publicar</button>
            </div>
          </form>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body text-center">
          <a id="left" href="/panel/events?page={{back page}}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
          Pagina: {{page}}
          <a id="right" href="/panel/events?page={{next page pages}}" class="btn btn-secondary"><i class="fa fa-arrow-right"></i></a>
          Total de paginas: {{pages}}&nbsp;<a title="Reiniciar filtro" class="btn btn-danger" href="/panel/club"><i class="fa fa-trash"></i></a>
        </div>
      </div>
      {{#if errorAlert}}
        {{> modal_alert}}
      {{/if}}
      {{#if clubs}}
        {{#each clubs}}
          <div class="card mb-4">
            <div class="card-header">
              <h5>{{name}}</h5>
            </div>
            <div class="card-body">
              <p>{{description}}</p>
              <div class="text-right">
                <form action="/panel/club/participe/{{_id}}" method="post">
                  <button type="submit" class="btn btn-secondary">Participar</button>
                </form>
              </div>
            </div>
            <div class="card-header">
              <span class="text-muted">Creado por: <a href="/panel/user/{{user._id}}">{{user.fullname}}</a></span>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>