{{> logged }}
<div class="container" style="margin-top: 76px">
  <div class="row">
    <div class="col-4">
      {{> lateral }}
    </div>
    <div class="col-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5>Agregar Noticia</h5>
        </div>
        <div class="card-body">
          <form action="/panel/notice" method="post">
            <div class="form-group">
              <input placeholder="Titulo" class="form-control" type="text" name="title" id="title" required>
            </div>
            <div class="form-group">
              <textarea
                class="form-control"
                placeholder="Describe lo sucedido"
                name="content" id="content" cols="30" rows="3" required></textarea>
            </div>
            <div class="form-group text-right">
              <button type="submit" class="btn btn-secondary" style="padding-left: 2.5rem; padding-right: 2.5rem;">Publicar</button>
            </div>
          </form>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body text-center">
          <a id="left" href="/panel/notice?page={{back page}}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
          Pagina: {{page}}
          <a id="right" href="/panel/notice?page={{next page pages}}" class="btn btn-secondary"><i class="fa fa-arrow-right"></i></a>
          Total de paginas: {{pages}}
          &nbsp;<a title="Reiniciar filtro" class="btn btn-danger" href="/panel/notice"><i class="fa fa-trash"></i></a>
        </div>
      </div>
      {{#if errorAlert}}
        {{> modal_alert}}
      {{/if}}
      {{#if notices}}
        {{#each notices}}
          <div class="card mb-4">
            <div class="card-header">
              <h5>{{title}}</h5>
            </div>
            <div class="card-body">
              <p>{{content}}</p>
            </div>
            <div class="card-footer">
              <span class="text-muted">Creado por: <a href="/panel/user/{{user._id}}">{{user.fullname}}</a></span>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>