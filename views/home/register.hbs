{{> navbar }}
<div class="container">
  <div class="row mt-4 justify-content-center align-items-center">
    <div class="col-6">
      <form class="card" action="/register" method="post">
        <div class="card-header">
          <h5>Registrarse</h5>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="fullname">Nombre completo</label>
            <input type="text" name="fullname" id="fullname" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="numcontrol">Numero de control</label>
            <input type="text" name="numcontrol" id="numcontrol" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="email">Correo Electronico</label>
            <input type="text" name="email" id="email" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control" minlength="6" required>
          </div>
          <div class="form-group text-right">
            <input type="submit" value="Registrarse" class="btn btn-primary">
          </div>
          {{#if error }}
            {{> error_alert }}
          {{/if}}
          {{#if message }}
            {{> message_alert }}
          {{/if}}
        </div>
        <div class="card-footer text-center">
          <span class="text-muted">¿Ya tienes cuenta?, <a href="/">Inicia Sesion</a></span>
        </div>
      </form>
    </div>
  </div>
</div>